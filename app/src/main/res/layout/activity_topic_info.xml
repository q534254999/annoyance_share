<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_topic_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shares.TopicInfoActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_answer"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/topic_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            >
            <TextView
                android:text="@string/topictitle"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_a"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@id/toolbar_answer">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/answer_info_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/questiontitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:layout_margin="5dp"
                 android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/questioncontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:id="@+id/tpinfoimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                     <Button
                         android:background="#ffffff"
                         android:id="@+id/addanswer"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textColor="#0099ff"
                         android:layout_margin="10dp"
                         android:text="@string/submitanswer"
                         android:layout_marginBottom="0dp"
                                />

            <TextView
                android:id="@+id/tv_answer"
                android:text="回答"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#222222"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ccbbbbbb" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
