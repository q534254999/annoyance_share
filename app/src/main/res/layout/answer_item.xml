<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="wrap_content"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <ImageView
        android:id="@+id/icon_a"
        android:src="@drawable/second"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/nick_name_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/icon_a"
        android:layout_toEndOf="@id/icon_a"
        android:text="mutouren"/>
    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_a"
        android:layout_toEndOf="@id/icon_a"
        android:layout_below="@id/nick_name_a"
        android:text="one hour ago"/>

</RelativeLayout>
<TextView
    android:id="@+id/content_a"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLines="5"
    android:text="hot hot hothot hot hothot hot hothot hot hothot hot hothot hot hothot hot hothot hot hothot hot hothot hot hothot hot hothot hot hothot hot hot"/>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#ffbbbbbb"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        style="Widget.AppCompat.Button.Borderless"
        android:id="@+id/btn_zf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00000000"
        android:text="转发" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#ffbbbbbb"/>

    <Button
        style="Widget.AppCompat.Button.Borderless"
        android:id="@+id/btn_pl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_weight="1"

        android:text="评论" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#ffbbbbbb"/>

    <Button
        style="Widget.AppCompat.Button.Borderless"
        android:id="@+id/btn_dz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_weight="1"
        android:text="点赞" />

</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#ffbbbbbb"/>
</LinearLayout>